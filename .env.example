# Travel Compositor API
TC_BASE_URL=https://online.travelcompositor.com
TC_MICROSITE_ID=your_microsite_id
TC_TOKEN=your_token_here
# OR use username/password:
# TC_USERNAME=your_username
# TC_PASSWORD=your_password
TC_TENANT_ID=your_tenant_id

# Media Selector APIs
# Pexels API (FREE - get key at https://www.pexels.com/api/)
PEXELS_API_KEY=your_pexels_api_key_here

# Unsplash API (FREE - get key at https://unsplash.com/developers)
UNSPLASH_ACCESS_KEY=your_unsplash_key_here

# YouTube Data API v3 (FREE - get key at https://console.cloud.google.com/)
YOUTUBE_API_KEY=your_youtube_key_here

# Mapbox GL JS (FREE - get key at https://www.mapbox.com/)
# Gratis tier: 50.000 map loads/maand
MAPBOX_TOKEN=your_mapbox_token_here

# Video Generation APIs
# Shotstack API (FREE trial - get key at https://shotstack.io)
SHOTSTACK_API_KEY=your_shotstack_api_key_here
SHOTSTACK_ENV=stage
# Use 'stage' for development (free), 'v1' for production

# Optional: Cloud Storage for Voice-overs
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# AWS_S3_BUCKET=your_bucket_name
# AWS_REGION=eu-west-1
